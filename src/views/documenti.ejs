        // Considera "nuovo" se caricato negli ultimi 6 giorni (dal 01/10/2025)
        const today = new Date('2025-10-06'); // Data corrente
        const uploadDateObj = new Date(uploadDate.split('/').reverse().join('-')); // Converte DD/MM/YYYY in YYYY-MM-DD
